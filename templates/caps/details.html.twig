{% extends 'base.html.twig' %}
{% block body %}

    {% if product.published is not empty %}
    <div class="container" id="product_detail">
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="{{ asset("img/caps/resized/" ~ product.image) }}" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ product.title }}</p>
                        <p class="card-text">{{ product.content }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                {#FIXME Cacher button edit si pas admin/user#}
                                <button type="button" class="btn btn-sm btn-outline-secondary">Editer</button>
                                {#<a href="{{ path('edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>#}
                            </div>
                            {#<small class="text-muted">{{ product.created|date('d-m-Y') }}</small>#}
                            <p class="text-success">{{ product.price }}€</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <div class="container" id="product_detail">
            <div class="row">
                <div class="col-md-6 offset-3">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h2>Le produit n'existe plus ou n'a pas encore été publié</h2>
                            <a href="{{ path('products') }}" class="btn btn-info">Retournez à la liste des produits</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    

{% endblock %}