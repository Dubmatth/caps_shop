{% extends 'base.html.twig' %}

{% block body %}
<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Casquettes</h1>
            <p class="lead text-muted">Headict est le shop de référence pour trouver votre casquette ! Que vous soyez snapback, 5 panel ou trucker, découvrez sur notre site une sélection de marques pointues et un choix incroyable de casquettes tendance !</p>
            <p>
                {#FIXME Trier par catégories MAYBE AJAX#}
                <a href="{#{{ path('products', {'category': 'curved'}) }}#}" class="btn btn-primary my-2">Curved</a>
                <a href="{#{{ path('products', {'category': fitted}) }}#}" class="btn btn-secondary my-2">Fitted</a>
                <a href="{#{{ path('products', {'category': snapback}) }}#}" class="btn btn-secondary my-2">Snapback</a>
            </p>
        </div>
    </section>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for product in products %}
                    {% if product.published is not empty %}
                    <div class="col-md-4" id="block_caps">
                        <div class="card mb-4 shadow-sm">
                            <a href="{{ path('details', {'id': product.id}) }}">
                                <img class="card-img-top" src="{{ asset("img/caps/resized/" ~ product.image) }}" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <p class="card-text">
                                    {{ product.title }}
                                    <br>
                                    <em class="card-text">{{ product.category.category }}</em>
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        {#<button type="button" class="btn btn-sm btn-outline-secondary">View</button>#}
                                        <a href="{{ path('details', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">Détails</a>
                                        {#FIXME Cacher button edit si pas admin/user#}
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Editer</button>
                                        {#<a href="{{ path('edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>#}
                                    </div>
                                    <small class="text-muted">{{ product.created|date('d-m-Y') }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</main>



{% endblock %}