{% extends 'security/admin.html.twig' %}
{% block adminContent %}
<div class="container mt-5">
    <h1>Nombres de commandes passées ce mois : {{ currentMonth['data']|length }}</h1>
    <div class="table-responsive mt-5">
        <table class="table table-striped table-sm" style="text-align: right;">
            <thead>
            <tr>
                <th>Commande</th>
                <th>Montant</th>
                <th>Date d'achat</th>
            </tr>
            </thead>
            <tbody>
            {% for data in currentMonth['data'] %}
                {% if data['amount'] > 0 %} {# Il me sort 2 amount négatif #}
                    <tr>
                        <td>{{ data['id'] }}</td>
                        <td>{{ (data['amount'] / 100) }} €</td>
                        <td>{{ data['created']|date("m/d/Y") }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}